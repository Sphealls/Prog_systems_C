/******************************************************************************

Номер 3. Элементы массива циклически сдвинуть на две позиции влево.

*******************************************************************************/
#include <iostream>

void rotateLeftByTwo(int arr[], int size) {
    // Переменная для временного хранения первых двух элементов
    int temp1 = arr[0];
    int temp2 = arr[1];

    // Сдвигаем все элементы на две позиции влево
    for (int i = 0; i < size - 2; ++i) {
        arr[i] = arr[i + 2];
    }

    // Помещаем временно сохраненные элементы в конец массива
    arr[size - 2] = temp1;
    arr[size - 1] = temp2;
}

int main() {
    const int size = 5; // Размер массива (можно менять для других задач)
    int arr[size] = {1, 2, 3, 4, 5}; // Исходный массив (можно менять для следующих задач)

    // Выводим исходный массив
    std::cout << "Исходный массив: ";
    for (int i = 0; i < size; ++i) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    // Выполняем циклический сдвиг влево на две позиции
    rotateLeftByTwo(arr, size);

    // Выводим результат
    std::cout << "Массив после циклического сдвига влево на две позиции: ";
    for (int i = 0; i < size; ++i) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}
